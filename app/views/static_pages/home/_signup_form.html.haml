.col-lg-12.homepage-non-auth-user-sign-up
  .row
    .col-lg-12.homepage-non-auth-user-sign-up-suggestion Sign up to see photos and videos from your friends.
    .navbar-form.homepage-non-auth-user-sign-up-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name),
        remote: true) do |f|
        = devise_error_messages!

        .form-group
          .input-group
            = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control'

          .input-group
            = f.text_field :fullName, placeholder: 'Full Name', class: 'form-control'

          .input-group
            = f.text_field :username, placeholder: 'Username', class: 'form-control'

          .input-group
            = f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'form-control'

          .input-group
            = f.password_field :password_confirmation, autocomplete: 'off',
                                        placeholder: 'Password Confirmation', class: 'form-control'

        .actions
          = f.submit 'Sign up', class: 'btn btn-default'
