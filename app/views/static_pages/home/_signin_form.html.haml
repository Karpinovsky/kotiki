.col-lg-12.homepage-non-auth-user-sign-in
  .row
    .navbar-form.homepage-non-auth-user-sign-in-form
      = form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f|
        .form-group
          .input-group
            = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control'

          .input-group
            = f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'form-control'

        .actions
          = f.submit 'Log in', class: 'btn btn-default'
