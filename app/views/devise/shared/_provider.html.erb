<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <button onclick = "location.href = '<%= omniauth_authorize_path(resource_name, provider) %>'",
      class="unauthorized-user-home-page-sign-up-via-social-network-button">
      <%= icon('facebook-official') %>
      <span>Log in with <%=OmniAuth::Utils.camelize(provider) %></span>
    </button>
  <% end %>
<% end %>
