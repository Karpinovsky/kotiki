.devise-main-container.devise-shared-pages
  .devise-container
    .devise-main-content-container
      .devise-main-content
        %h1.kotogram Kotogram
        %h2 Resend confirmation
        = form_for resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post} do |f|
          = f.email_field :email, autofocus: true, placeholder: :Email,
            value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'input-devise'
          = f.submit 'Resend instructions', class: 'btn-devise'
      .devise-shared-links-container
        = render 'devise/shared/links'
