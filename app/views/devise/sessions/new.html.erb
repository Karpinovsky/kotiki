<div class='devise'>
  <div class='devise-content'>
    <h1 class='kotogram'>Kotogram</h1>
    <%= form_for resource, as: resource_name, url: session_path(resource_name),
      html: { class: 'form-control form-devise', id: '' } do |f| %>
      <% devise_error_messages! %>
      <div class='form-group'>
        <div class='input-container'>
          <%= f.email_field :email, autofocus: true, placeholder: :Email, class: 'input-control' %>
        </div>
      </div>

      <div class='form-group'>
        <div class='input-container'>
          <%= f.password_field :password, autocomplete: :off, placeholder: :Password, class: 'input-control' %>
        </div>
      </div>

      <div class='form-group'>
        <div class='input-container'>
          <%= f.submit 'Log in', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
    <div class='or'>
      <div class='line'></div>
      <h3>OR</h3>
      <div class='line'></div>
    </div>
    <%= render 'devise/shared/provider' %>
  </div>
  <%= render 'devise/shared/links' %>
</div>
