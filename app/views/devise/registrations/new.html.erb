<div class='devise devise-registrations-new'>
  <div class='devise-container'>
    <div class='devise-main-content'>
      <h1 class='kotogram'>Kotogram</h1>
      <h2>Sign up to see photos and videos from your friends.</h2>
      <%= render 'devise/shared/provider' %>
      <div class='or'>
        <div class='line'></div>
        <h3>OR</h3>
        <div class='line'></div>
      </div>
      <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <% devise_error_messages! %>
        <%= f.email_field :email, autofocus: true, placeholder: :Email, class: 'input-devise' %>
        <%= f.fields_for :profile, Profile.new do |ff| %>
          <%= ff.text_field :full_name, placeholder: 'Full Name', class: 'input-devise' %>
          <%= ff.text_field :username, placeholder: :Username, class: 'input-devise' %>
        <% end %>
        <%= f.password_field :password, autocomplete: :off, placeholder: :Password, class: 'input-devise' %>
        <%= f.password_field :password_confirmation, autocomplete: :off, placeholder: 'Password Confirmation',
          class: 'input-devise' %>
        <%= f.submit 'Sign up', class: 'btn-devise' %>
      <% end %>
    </div>
      <%= render 'devise/shared/links' %>
  </div>
</div>
