<div class='devise'>
  <div class='devise-content'>
    <h1 class='kotogram'>Kotogram</h1>
    <h2>Sign up to see photos and videos from your friends.</h2>
    <%= render 'devise/shared/provider' %>
    <div class='or'>
      <div class='line'></div>
      <h3>OR</h3>
      <div class='line'></div>
    </div>
    <%= form_for resource, as: resource_name, url: registration_path(resource_name),
      html: { class: 'form-control form-devise', id: '' } do |f| %>
      <% devise_error_messages! %>

      <div class='form-group'>
        <div class='input-container'>
          <%= f.email_field :email, autofocus: true, placeholder: :Email, class: 'input-control' %>
        </div>
      </div>

      <%= f.fields_for :profile, Profile.new do |ff| %>
        <div class='form-group'>
          <div class='input-container'>
            <%= ff.text_field :full_name, placeholder: 'Full Name', class: 'input-control' %>
          </div>
        </div>

        <div class='form-group'>
          <div class='input-container'>
            <%= ff.text_field :username, placeholder: :Username, class: 'input-control' %>
          </div>
        </div>
      <% end %>

      <div class='form-group'>
        <div class='input-container'>
          <%= f.password_field :password, autocomplete: :off, placeholder: :Password, class: 'input-control' %>
        </div>
      </div>

      <div class='form-group'>
        <div class='input-container'>
          <%= f.password_field :password_confirmation, autocomplete: :off, placeholder: 'Password Confirmation',
            class: 'input-control' %>
        </div>
      </div>

      <div class='form-group'>
        <div class='input-container'>
          <%= f.submit 'Sign up', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render 'devise/shared/links' %>
</div>
