<div class='unauthorized-user-home-page'>
  <div class='unauthorized-user-home-page-container'>
    <div class='unauthorized-user-home-page-container-kotogram-image'>
      <%= image_tag 'unauthorized_user_home_page_kotogram.png' %>
    </div>
    <div class='unauthorized-user-home-page-main-content'>
      <div class='unauthorized-user-home-page-sign-up-container'>
        <h1 class='unauthorized-user-home-page-kotogram'>Kotogram</h1>
        <h2 class='unauthorized-user-home-page-sign-up-suggestion'>
          Sign up to see photos and videos from your friends.
        </h2>
        <%= render 'devise/shared/provider' %>
        <div class='unauthorized-user-home-page-or-sign-up-with-form-container'>
          <div class='unauthorized-user-home-page-or-sign-up-with-form-line'></div>
          <h3 class='unauthorized-user-home-page-or-sign-up-with-form'>OR</h3>
          <div class='unauthorized-user-home-page-or-sign-up-with-form-line'></div>
        </div>
        <%= form_for resource, as: resource_name, url: registration_path(resource_name),
          html: { class: 'unauthorized-user-home-page-signup-form cp-sign-up-form' } do |f| %>
          <%- devise_error_messages! %>
          <%= f.email_field :email, autofocus: true, placeholder: 'Email',
            class: 'unauthorized-user-home-page-sign-up-form-input-control' %>
          <%= f.fields_for :profile, Profile.new do |ff| %>
            <%= ff.text_field :full_name, placeholder: 'Full Name',
              class: 'unauthorized-user-home-page-sign-up-form-input-control' %>
            <%= ff.text_field :username, placeholder: 'Username',
              class: 'unauthorized-user-home-page-sign-up-form-input-control' %>
          <% end %>
          <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password',
            class: 'unauthorized-user-home-page-sign-up-form-input-control' %>
          <%= f.password_field :password_confirmation, autocomplete: 'off',
            placeholder: 'Password Confirmation',
            class: 'unauthorized-user-home-page-sign-up-form-input-control' %>
          <%= f.submit 'Sign up', class: 'unauthorized-user-home-page-sign-up-button' %>
        <% end %>
      </div>
      <div class='unauthorized-user-shared-links-container'>
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>
