.devise-main-container.devise-registrations-new
  .devise-container
    .devise-container-image
      = image_tag 'unauthorized_user_home_page_kotogram.png'
    .devise-main-content-container
      .devise-main-content
        %h1.kotogram Kotogram
        %h2 Sign up to see photos and videos from your friends.
        = render 'devise/shared/provider'
        .devise-or
          .line
          %h3 OR
          .line
        = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
          - devise_error_messages!
          = f.email_field :email, autofocus: true, placeholder: :Email,
            class: 'input-devise'
          = f.fields_for :profile, Profile.new do |ff|
            = ff.text_field :full_name, placeholder: 'Full Name',
              class: 'input-devise'
            = ff.text_field :username, placeholder: :Username,
              class: 'input-devise'
          = f.password_field :password, autocomplete: :off, placeholder: :Password,
              class: 'input-devise'
          = f.password_field :password_confirmation, autocomplete: :off,
            placeholder: 'Password Confirmation', class: 'input-devise'
          = f.submit 'Sign up', class: 'btn-devise'

      = render 'devise/shared/links'
