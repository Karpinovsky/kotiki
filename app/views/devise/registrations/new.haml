.devise-registrations-new
  .devise-registrations-new-container
    .devise-registrations-new-container-image
      = image_tag 'unauthorized_user_home_page_kotogram.png'
    .devise-registrations-new-container-main-content
      .devise-registrations-new-container-main-content-signup-container
        %h1.kotogram Kotogram
        %h2 Sign up to see photos and videos from your friends.
        = render 'devise/shared/provider'
        .devise-registrations-new-container-main-content-signup-container-or-signup-with-form-container
          .devise-registrations-new-container-main-content-signup-container-or-signup-with-form-container-line
          %h3 OR
          .devise-registrations-new-container-main-content-signup-container-or-signup-with-form-container-line
        = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
          - devise_error_messages!
          = f.email_field :email, autofocus: true, placeholder: :Email,
            class: 'devise-input'
          = f.fields_for :profile, Profile.new do |ff|
            = ff.text_field :full_name, placeholder: 'Full Name',
              class: 'devise-input'
            = ff.text_field :username, placeholder: :Username,
              class: 'devise-input'
          = f.password_field :password, autocomplete: :off, placeholder: :Password,
              class: 'devise-input'
          = f.password_field :password_confirmation, autocomplete: :off,
            placeholder: 'Password Confirmation', class: 'devise-input'
          = f.submit 'Sign up', class: 'devise-btn'
      .unauthorized-user-shared-links-container
        = render 'devise/shared/links'
