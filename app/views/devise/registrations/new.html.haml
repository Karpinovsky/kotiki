.container
  .row
    .col-lg-12
      %h1 Kotogram
      %h3 Sign up to see photos and videos from your friends.
      = button_tag 'cancel', type: 'button',
        onclick: "location.href = '#{user_facebook_omniauth_authorize_path}'" do
        = icon('facebook-official')
        %span Log in with Facebook
      %h4 OR
      = form_for resource, as: resource_name,
        url: registration_path(resource_name) do |f|
        = devise_error_messages!

        = f.email_field :email, autofocus: true, placeholder: 'Email'
        %br

        = f.text_field :username, placeholder: 'Username'
        %br

        = f.text_field :full_name, placeholder: 'Full Name'
        %br

        = f.password_field :password, autocomplete: 'off',
          placeholder: 'Password'
        %br

        = f.password_field :password_confirmation, autocomplete: 'off',
          placeholder: 'Password Confirmation'
        %br

        = f.submit 'Sign up'
      %h4 Have an account?
      %span= link_to 'Log in', new_user_session_path
