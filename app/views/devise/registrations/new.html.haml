.devise-registration-new
  .container
    .row
      .col-lg-4.col-md-5.col-sm-6.col-xs-12.col-centered.signup
        .row
          .col-lg-12.col-md-12.col-sm-12.col-xs-12.kotogram Kotogram
          .col-lg-12.col-md-12.col-sm-12.col-xs-12.signup-suggestion
            Sign up to see photos and videos from your friends.
          .col-lg-12.facebook
            = button_tag 'cancel', type: 'button', class: 'facebook-btn',
              onclick: "location.href = '#{user_facebook_omniauth_authorize_path}'" do
              = icon('facebook-official')
              Log in with Facebook
          .col-lg-12.or
            .left-line
            %span OR
            .right-line
          .col-lg-12.signup-form
            = form_for resource, as: resource_name,
              url: registration_path(resource_name) do |f|
              = devise_error_messages!

              .form-group
                .input-group
                  = f.email_field :email, autofocus: true, placeholder: 'Email',
                    class: 'form-control'

                .input-group
                  = f.text_field :username, placeholder: 'Username',
                    class: 'form-control'

                .input-group
                  = f.text_field :full_name, placeholder: 'Full Name',
                    class: 'form-control'

                .input-group
                  = f.password_field :password, autocomplete: 'off',
                    placeholder: 'Password', class: 'form-control'

                .input-group
                  = f.password_field :password_confirmation, autocomplete: 'off',
                    placeholder: 'Password Confirmation', class: 'form-control'

                .actions
                  = f.submit 'Sign up', class: 'facebook-btn'
      .col-lg-4.col-md-5.col-sm-6.col-xs-12.col-centered.signin-link
        Have an account?
        = link_to 'Log in', new_user_session_path
