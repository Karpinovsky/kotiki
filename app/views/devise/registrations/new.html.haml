.signup-page.flex-container-to-devise-pages-for-not-authenticated-user
  %section.signup-page-content.flex-item-to-devise-pages-for-not-authenticated-user
    %h1.kotogram-logo-to-devise-pages-for-not-authenticated-user Kotogram
    %h2.suggestion-to-signup
      Sign up to see photos and videos
      %br
      from your friends.
    = render 'devise/shared/provider'
    %h3.separator-for-signup-or-login-types OR
    = form_for resource, as: resource_name, url: registration_path(resource_name),
      html: { class: 'form-signup form-to-devise-pages-for-not-authenticated-user', id: ''} do |f|

      = f.email_field :email, autofocus: true, placeholder: 'Email',
        class: 'form-input-to-devise-pages-for-not-authenticated-user'

      = f.text_field :username, placeholder: 'Username',
        class: 'form-input-to-devise-pages-for-not-authenticated-user'


      = f.text_field :full_name, placeholder: 'Full Name',
        class: 'form-input-to-devise-pages-for-not-authenticated-user'


      = f.password_field :password, autocomplete: 'off', placeholder: 'Password',
        class: 'form-input-to-devise-pages-for-not-authenticated-user'


      = f.password_field :password_confirmation, autocomplete: 'off',
        placeholder: 'Password Confirmation',
        class: 'form-input-to-devise-pages-for-not-authenticated-user'


      = f.submit 'Sign up', class: 'form-button-to-devise-pages-for-not-authenticated-user'
  %section.shared-links-to-devise-pages-for-not-authenticated-user.shared-links-signup-page
    = render 'devise/shared/links'
