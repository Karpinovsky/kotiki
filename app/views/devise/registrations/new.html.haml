.signup-flex-container
  .container.signup-flex-item
    .row
      .col-lg-6.col-lg-offset-3.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1.col-xs-12
        .row
          .col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1.signup
            .row
              .col-lg-12.col-md-12.col-sm-12.col-xs-12
                %h1.text-center.text-nowrap Kotogram
              .col-lg-12.col-md-12.col-sm-12.col-xs-12
                %h2.text-center
                  Sign up to see photos and videos
                  %br
                  from your friends.
              .col-lg-10.col-lg-offset-1.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1.col-xs-10.col-xs-offset-1
                = render 'devise/shared/provider'
              .col-lg-12.col-md-12.col-sm-12.col-xs-12
                %h3.text-center.text-nowrap OR
              .col-lg-10.col-lg-offset-1.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1.col-xs-10.col-xs-offset-1.signup-form
                = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|

                  = f.email_field :email, autofocus: true, placeholder: 'Email'

                  = f.text_field :full_name, placeholder: 'Full Name'

                  = f.text_field :username, placeholder: 'Username'

                  = f.password_field :password, autocomplete: 'off', placeholder: 'Password'

                  = f.password_field :password_confirmation, autocomplete: 'off',
                    placeholder: 'Password Confirmation'

                  = f.submit 'Sign up', class: 'btn-signup'
          .col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1.shared-links
            .row
              .col-lg-12.col-md-12.col-sm-12.col-xs-12
                = render 'devise/shared/links'
