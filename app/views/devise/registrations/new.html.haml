.signup
  .signup-container
    %h1.logo Kotogram
    %h2.suggestion
      Sign up to see photos and videos
      %br
      from your friends.
    = render 'devise/shared/provider'
    %h2.or OR
    = form_for resource, as: resource_name, url: registration_path(resource_name),
      html: { class: 'form form-signup'} do |f|
      = devise_error_messages!

      = f.email_field :email, autofocus: true, placeholder: 'Email',
        class: 'form-control'

      = f.text_field :username, placeholder: 'Username',
        class: 'form-control'


      = f.text_field :full_name, placeholder: 'Full Name',
        class: 'form-control'


      = f.password_field :password, autocomplete: 'off',
        placeholder: 'Password', class: 'form-control'


      = f.password_field :password_confirmation, autocomplete: 'off',
        placeholder: 'Password Confirmation', class: 'form-control'


      = f.submit 'Sign up', class: 'button button-signup'
  .shared-links
    = render 'devise/shared/links'
