.container.devise-registrations-edit-container
  .row
    .col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
      .row
        .col-lg-10.col-lg-offset-1.col-md-12.col-sm-12.col-xs-12.devise-registrations-edit-main-content
          .row
            .col-lg-12.col-md-12.col-sm-12.col-xs-12
              .editpage-avatar.text-center= image_tag current_user.profile.avatar.editpage,
                class: 'img-circle'
            .col-lg-12.col-md-12.col-sm-12.col-xs-12
              %h2.text-center.text-muted= current_user.profile.username
            = render 'devise/registrations/public'
