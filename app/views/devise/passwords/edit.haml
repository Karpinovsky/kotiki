.devise-main-container.devise-shared-pages
  .devise-container
    .devise-main-content-container
      .devise-main-content
        %h1.kotogram Kotogram
        %h2 Change your password
        = form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f|
          = f.hidden_field :reset_password_token
          = f.password_field :password, autofocus: true, autocomplete: :off, placeholder: 'New password', class: 'input-devise'
          = f.password_field :password_confirmation, autocomplete: :off, placeholder: 'Confirm new password', class: 'input-devise'
          = f.submit 'Change password', class: 'btn-devise'

      = render 'devise/shared/links'
