<div class='devise'>
  <div class='devise-content'>
    <h1 class='kotogram'>Kotogram</h1>
    <h2>Forgot your password?</h2>
    <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: :Email, class: 'input-devise' %>
      <%= f.submit 'Send me reset instructions', class: 'btn-devise' %>
    <% end %>
  </div>
  <%= render 'devise/shared/links' %>
</div>
