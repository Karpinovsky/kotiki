.devise-main-container.devise-shared-pages
  .devise-container
    .devise-main-content-container
      .devise-main-content
        %h1.kotogram Kotogram
        %h2 Forgot your password?
        = form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f|
          = f.email_field :email, autofocus: true, placeholder: :Email, class: 'input-devise'
          = f.submit 'Send me reset instructions', class: 'btn-devise'

      = render 'devise/shared/links'
