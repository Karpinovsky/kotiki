.devise-main-container.devise-shared-pages
  .devise-container
    .devise-main-content-container
      .devise-main-content
        %h1.kotogram Kotogram
        %h2 Resend unlock
        = form_for resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post } do |f|
          = f.email_field :email, autofocus: true, placeholder: :Email, class: 'input-devise'
          = f.submit 'Resend instructions', class: 'btn-devise'
      .devise-shared-links-container
        = render 'devise/shared/links'
