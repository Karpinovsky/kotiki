<div class='devise'>
  <div class='devise-content'>
    <h1 class='kotogram'>Kotogram</h1>
    <h2>Resend unlock</h2>
    <%= form_for resource, as: resource_name, url: unlock_path(resource_name),
      html: { method: :post, class: 'form-control form-devise', id: '' } do |f| %>
      <div class='form-group'>
        <div class='input-container'>
          <%= f.email_field :email, autofocus: true, placeholder: :Email, class: 'input-control' %>
        </div>
      </div>

      <div class='form-group'>
        <div class='input-container'>
          <%= f.submit 'Resend instructions', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render 'devise/shared/links' %>
</div>
