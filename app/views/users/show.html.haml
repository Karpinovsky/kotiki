.container.main-content
  .row
    .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1.col-sm-12.col-xs-12
      .row
        .col-lg-12
          = form_for [current_user, current_user.posts.build] do |f|
            .form-group
              = f.fields_for :attachment, Attachment.new do |ff|
                = ff.file_field :media
            .form-group
              = f.text_area :description, placeholder: 'Add a description..', class: 'form-control',
                style: "max-width: 100%; min-width: 100%"
            = f.submit 'New post', class: 'btn btn-primary btn-block'
        .col-lg-12.col-md-12.col-sm-12.col-xs-12.text-center
          = image_tag @user.profile.avatar.showpage, class: 'img-circle'
        .col-lg-12.col-md-12.col-sm-12.col-xs-12.text-center.text-muted
          %h2{ style: 'margin-bottom: 10px;' }= @user.profile.username
          = render 'relationships/form'
        .col-lg-12.col-md-12.col-sm-12.col-xs-12
          .row
            .col-lg-2.col-lg-offset-3.col-md-2.col-md-offset-3.col-sm-2.col-sm-offset-3.col-xs-4.text-center.text-muted
              %h4= @user.posts.count
              %h5= 'post'.pluralize(@user.posts.count)
            .col-lg-2.col-md-2.col-sm-2.col-xs-4
              = link_to followers_user_path(@user), class: 'text-center text-muted' do
                %h4= @user.followers.count
                %h5 followers
            .col-lg-2.col-md-2.col-sm-2.col-xs-4
              = link_to following_user_path(@user), class: 'text-center text-muted' do
                %h4= @user.followed_users.count
                %h5 following
        .col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-12.text-muted{style: 'margin-top: 10px; word-wrap: break-word;' }
          %strong= @user.profile.full_name
          %p= @user.profile.about_me

    = render 'users/posts'
