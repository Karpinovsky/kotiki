.col-lg-10.col-lg-offset-1.col-md-10.col-md-offset-1.col-sm-12.col-xs-12#user-posts
  .row
    .col-lg-10.col-lg-offset-1.col-md-10.col-md-offset-1.col-sm-12.col-xs-12#user-posts-options
      .row
        - if user_signed_in? && current_user == @user
          .col-lg-6.col-lg-offset-3.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-12{ style: 'margin-top: 10px; margin-bottom: 10px' }
            .btn-group.btn-group-justified{ role: 'group', 'aria-label' => '...' }
              .btn-group{ role: 'group' }
                %button{ class: 'btn btn-default active' } My posts
              .btn-group{ role: 'group' }
                %button#btn-to-new-post{ class: 'btn btn-default', 'data-remote' => 'true' }
                  Share new moments
    .col-lg-12.col-md-12.col-sm-12.col-xs-12
      .row
        - if @user.posts.any?
          = render @user.posts
        - else
          = render 'posts/no_posts'
