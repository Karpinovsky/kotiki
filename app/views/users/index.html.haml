.user-index
  .container
    .row
      .col-lg-4.col-md-5.col-sm-6.col-xs-10.col-centered.user-index-container
        .row
          .col-lg-12.user-index-users-finded Finded users
          .col-lg-12
            - @users.each do |user|
              .row
                .col-lg-12.user-index-user
                  .user-index-user-avatar
                    - if user.avatar.blank?
                      = link_to image_tag('default_avatar.jpg'), user
                    - else
                      = link_to image_tag(user.avatar.avatar.homepage), user
                  .user-index-user-link= link_to user.username, user_path(user)
