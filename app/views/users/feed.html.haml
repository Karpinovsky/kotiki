.container.users-feed-container
  .row
    .col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-12
      .row
        - @feed_items.each do |feed_item|
          .col-lg-12.col-md-12.col-sm-12.col-xs-12.users-feed-post
            .row
              .col-lg-12.col-md-12.col-sm-12.col-xs-12.users-feed-post-header
                = link_to user_path(feed_item.user) do
                  = image_tag feed_item.user.profile.avatar.feedpage, class: 'img-circle'
                  %strong.users-feed-post-header-username= feed_item.user.profile.username
                = link_to user_post_path(feed_item.user, feed_item), class: 'users-feed-post-time' do
                  %span.text-muted= time_ago_in_words(feed_item.created_at)
              - if feed_item.attachment.content_type.start_with? 'video'
                = video_tag feed_item.attachment.media, controls: :true, style: 'width: 100%; height: 100%;'
              - else
                = image_tag feed_item.attachment.media, style: 'width: 100%; height: 100%;'
              .col-lg-12.col-md-12.col-sm-12.col-xs-12
                = render 'likes/posts/form', likeable: feed_item
                = render 'likes/likes', likeable: feed_item
              - unless feed_item.description.blank?
                .col-lg-12.col-md-12.col-sm-12.col-xs-12.users-feed-post-description
                  %strong= feed_item.user.profile.username
                  = with_links_to_users(with_links_to_tags(feed_item.description))
              .col-lg-12.col-md-12.col-sm-12.col-xs-12
                %ul.users-feed-post-comments-list
                  = render feed_item.comments
              .col-lg-12.col-md-12.col-sm-12.col-xs-12.users-feed-new-comment
                = render 'comments/form', post: feed_item
