- if user_signed_in?
  - if likeable.has_like_from?(current_user)
    = form_for([likeable.user, likeable, likeable.likes.find_by(liker: current_user.username)], html: { method: :delete }) do |f|
      = f.submit 'Dislike'
  - else
    = form_for [likeable.user, likeable, likeable.likes.build] do |f|
      = f.hidden_field :likeable_type, value: likeable.class.name
      = f.hidden_field :likeable_id, value: likeable.id
      = f.hidden_field :liker, value: current_user.username
      = f.submit 'Like'
