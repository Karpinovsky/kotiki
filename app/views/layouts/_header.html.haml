- if user_signed_in?
  %header.nav.navbar-default
    .container.header
      .row
        .col-lg-4
          .navbar-header
            = link_to icon('instagram'), root_path
        .col-lg-4
          .navbar-form.auth-user-header-search-form
            = form_tag(users_path, method: :get) do
              .form-group
                = text_field_tag :search, '', placeholder: 'Search', class: 'form-control'
                //= submit_tag 'Search', name: nil, class: 'btn btn-default'
        .col-lg-4
          .nav.navbar-nav
            = link_to icon('circle-thin'), '#', class: 'explore'
            = link_to icon('heart-o'), '#', class: 'news'
            = link_to icon('user-o'), current_user, class: 'profile'
